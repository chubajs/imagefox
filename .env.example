# ImageFox Environment Configuration

# API Keys (Required)
APIFY_API_KEY=your_apify_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
AIRTABLE_API_KEY=your_airtable_api_key_here
IMAGEBB_API_KEY=your_imagebb_api_key_here

# Sentry Configuration (Required for production)
SENTRY_DSN=your_sentry_dsn_here

# Linear Configuration (Optional, for project management)
LINEAR_API_KEY=your_linear_api_key_here

# Airtable Configuration
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=Images

# Performance Configuration (Optional)
MAX_WORKERS=3
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
CACHE_TTL=3600

# Vision Model Configuration (Optional)
DEFAULT_VISION_MODEL=openai/gpt-4-vision-preview
FALLBACK_VISION_MODEL=anthropic/claude-3-sonnet

# Image Processing Configuration (Optional)
MAX_IMAGE_SIZE_MB=10
MIN_IMAGE_WIDTH=400
MIN_IMAGE_HEIGHT=300
IMAGE_QUALITY=85

# API Rate Limits (Optional)
APIFY_RATE_LIMIT=100
OPENROUTER_RATE_LIMIT=50
AIRTABLE_RATE_LIMIT=5
IMAGEBB_RATE_LIMIT=10

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FILE=imagefox.log

# Development/Testing (Optional)
DEBUG=false
TEST_MODE=false
MOCK_APIS=false